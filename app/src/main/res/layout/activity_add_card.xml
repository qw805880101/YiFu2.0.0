<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/txt_color_666666"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="银行卡号"
            android:textColor="@color/txt_color_232323"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_add_card_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="输入银行卡号"
            android:textColor="@color/txt_color_232323"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="预留手机号"
            android:textColor="@color/txt_color_232323"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_add_card_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="银行预留手机号码"
            android:textColor="@color/txt_color_232323"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/txt_color_232323"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_add_card_ver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColor="@color/txt_color_232323"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_add_card_get_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/list_btn_verification_code"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_add_card_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_selector_1"
        android:text="下一步"
        android:textColor="@color/txt_color_fc5f58"
        android:textSize="17dp" />


</LinearLayout>