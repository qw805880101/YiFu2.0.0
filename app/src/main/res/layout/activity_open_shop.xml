<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/list_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="店铺名称"
                android:textColor="@color/txt_color_232323"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_shop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入店铺名称"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/list_icon3"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="职业"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_jop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_jop_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/list_btn_arrow"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="top"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/list_icon1"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="住址"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入详细地址"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/list_icon2"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textColor="@color/txt_color_232323"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入邮箱"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="经营产品/类型"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_shop_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_shop_type_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/list_btn_arrow"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="产品平均单价"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_shop_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_shop_price_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/list_btn_arrow"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="微商经营经验"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_shop_experience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="银行预留手机号码"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_shop_experience_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/list_btn_arrow"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="是否有线下门店或摊位"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_shop_when"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_shop_when_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/list_btn_arrow"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/txt_color_232323"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_shop_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_selector_1"
            android:text="下一步"
            android:textColor="@color/txt_color_fc5f58"
            android:textSize="17dp" />
    </LinearLayout>

</ScrollView>