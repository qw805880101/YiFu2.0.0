<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/txt_color_fcf2be"
                android:gravity="center"
                android:padding="10dp"
                android:text="请拍摄身份证正面照"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/image_pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@mipmap/list_image_pic1"
                android:scaleType="center"
                android:src="@mipmap/list_btn_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="身份证完整，身份证号清晰"
                android:textColor="@color/txt_color_5a5a5a"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray" />

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/txt_color_fcf2be"
                android:gravity="center"
                android:padding="10dp"
                android:text="请拍摄身份证反面照"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/image_pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@mipmap/list_image_pic2"
                android:scaleType="center"
                android:src="@mipmap/list_btn_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="身份证完整，有效期清晰"
                android:textColor="@color/txt_color_5a5a5a"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray" />

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/txt_color_fcf2be"
                android:gravity="center"
                android:padding="10dp"
                android:text="请根据指示完成面部动作"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/image_pic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@mipmap/list_image_pic3"
                android:scaleType="center"
                android:src="@mipmap/list_btn_icon" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_real_id_card_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_selector_1"
            android:text="提交"
            android:textColor="@color/txt_color_fc5f58"
            android:textSize="17dp" />


    </LinearLayout>
</ScrollView>