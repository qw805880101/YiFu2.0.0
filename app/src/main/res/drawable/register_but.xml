<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_ff7316" />

            <corners android:radius="80px" />
        </shape>
    </item>
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/back_ececed"
                android:startColor="@color/back_ececed" />

            <padding
                android:bottom="10px"
                android:left="15px"
                android:right="10px"
                android:top="15px" />

            <corners android:radius="80px" />
        </shape>
    </item>

</layer-list>